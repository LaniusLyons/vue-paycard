{
  "name": "vue-paycard",
  "version": "0.3.0",
  "private": false,
  "description": "Credit card component made with Vue.js",
  "homepage": "https://github.com/guastallaigor/vue-paycard#readme",
  "author": "Igor Guastalla de Lima",
  "scripts": {
    "delete-dev:css": "rimraf src/assets/css/style.dev.css",
    "build:cleancss": "cleancss src/assets/css/style.dev.css -o src/assets/css/style.min.css --source-map",
    "build:minify": "sass src/assets/css/style.css:src/assets/css/style.dev.css --style=compressed --no-source-map",
    "build:autoprefix": "postcss src/assets/css/style.dev.css --replace --use autoprefixer",
    "build": "npm run build:minify && npm run build:autoprefix && npm run build:cleancss && npm run delete-dev:css",
    "test:unit": "vue-cli-service test:unit",
    "test:watch": "vue-cli-service test:unit --watch",
    "commit": "git-cz",
    "commit:retry": "git-cz --retry",
    "commitmsg": "commitlint -e",
    "lint": "vue-cli-service lint",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@storybook/addon-a11y": "^5.3.19",
    "@storybook/addon-docs": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/theming": "^5.3.19",
    "@storybook/vue": "^5.3.19",
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-plugin-unit-jest": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/test-utils": "^1.0.3",
    "autoprefixer": "^9.8.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-preset-vue": "^2.0.2",
    "clean-css-cli": "^4.3.0",
    "commitizen": "^4.1.2",
    "core-js": "^3.6.5",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.2.5",
    "lint-staged": "^9.5.0",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/src/assets/"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "bugs": {
    "url": "https://github.com/guastallaigor/vue-paycard/issues"
  },
  "files": [
    "src/*",
    "*.json",
    "*.js"
  ],
  "keywords": [
    "vue",
    "vuejs",
    "credit-card",
    "vue-credit-card",
    "paycard",
    "vue-paycard",
    "credit",
    "card"
  ],
  "license": "MIT",
  "main": "./vue-paycard.js",
  "repository": {
    "type": "git",
    "url": "https://github.com:guastallaigor/vue-paycard.git"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        0,
        "never",
        "sentence-case"
      ],
      "subject-full-stop": [
        0,
        "never",
        "."
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
